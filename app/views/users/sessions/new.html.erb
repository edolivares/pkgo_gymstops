<% content_for :titulo, "Iniciar Sesión en Go-Stops" %>
<% content_for :descripcion, "Accede a tu cuenta de usuario o regístrate gratis!" %>
<% content_for :canonical, "http://go-stops.com/login" %>
<% content_for :robots, "index,follow" %>

<h4 class="center-align">Iniciar Sesión en Go-Stops</h4>
  <div class="divider" style="margin-bottom: 20px;"></div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

   <div class="row margin">
      <div class="input-field col s12">
         <i class="mdi-social-person-outline prefix"></i>
         <%= f.input :email, required: false, autofocus: true %>
      </div>
   </div>
   <div class="row margin">
      <div class="input-field col s12">
         <i class="mdi-social-person-outline prefix"></i>
         <%= f.input :password, required: false %>
      </div>
   </div>

   <% if devise_mapping.rememberable? -%>
      <div class="row margin">
      <div class="col s12">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Recuérdame' %>
         </div>
      </div>
   <% end -%>

   <div class="row margin">
      <div class="input-field col s12">
         <%= f.button :submit, "Iniciar Sesión", style: 'width:100%' %>
      </div>
      <div class="input-field col s12" style="margin-top:10px;">
         <%= link_to omniauth_authorize_path(resource_name, :facebook), {:class => "btn btn-block btn-social btn-facebook"} do %>
            <span class="fa fa-facebook"></span> Iniciar sesión con Facebook
         <% end %>
      </div>
   </div>

   <div class="divider"></div>

<% end %>

<%= render "users/shared/links" %>
